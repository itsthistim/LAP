  ======================================================== -->
	</head>

	<body>
		<slot />

		<!-- Vendor JS Files -->
		<script is:inline src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
		<script is:inline src="/vendor/glightbox/js/glightbox.min.js"></script>
		<script is:inline src="/vendor/isotope-layout/isotope.pkgd.min.js"></script>
		<script is:inline src="/vendor/swiper/swiper-bundle.min.js"></script>
		<script is:inline src="/vendor/php-email-form/validate.js"></script>

