</html>

<style>
	:root {
		--primary: #e43c5c;

		/* primary lighter */
		--primary-l-9: color-mix(in srgb, var(--primary) 10%, white);
		--primary-l-8: color-mix(in srgb, var(--primary) 20%, white);
		--primary-l-7: color-mix(in srgb, var(--primary) 30%, white);
		--primary-l-6: color-mix(in srgb, var(--primary) 40%, white);
		--primary-l-5: color-mix(in srgb, var(--primary) 50%, white);
		--primary-l-4: color-mix(in srgb, var(--primary) 60%, white);
		--primary-l-3: color-mix(in srgb, var(--primary) 70%, white);
		--primary-l-2: color-mix(in srgb, var(--primary) 80%, white);
		--primary-l-1: color-mix(in srgb, var(--primary) 90%, white);

		/* primary darker */
		--primary-d-9: color-mix(in srgb, var(--primary) 10%, black);
		--primary-d-8: color-mix(in srgb, var(--primary) 20%, black);
		--primary-d-7: color-mix(in srgb, var(--primary) 30%, black);
		--primary-d-6: color-mix(in srgb, var(--primary) 40%, black);
		--primary-d-5: color-mix(in srgb, var(--primary) 50%, black);
		--primary-d-4: color-mix(in srgb, var(--primary) 60%, black);
		--primary-d-3: color-mix(in srgb, var(--primary) 70%, black);
		--primary-d-2: color-mix(in srgb, var(--primary) 80%, black);
		--primary-d-1: color-mix(in srgb, var(--primary) 90%, black);
	}
</style>
