	.team .member .member-img {
		position: relative;
		overflow: hidden;
	}

	.team .member .social {
		position: absolute;
		left: 0;
		bottom: 0;
		right: 0;
		height: 40px;
		opacity: 0;
		transition: ease-in-out 0.3s;
